{
  "name": "forms-designer",
  "private": true,
  "description": "Defra forms designer",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/forms-designer.git"
  },
  "license": "OGL-UK-3.0",
  "workspaces": [
    "model",
    "queue-model",
    "designer"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace designer",
    "format": "prettier --write \"**/*.{cjs,js,jsx,json,md,mjs,scss,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{cjs,js,jsx,json,md,mjs,scss,ts,tsx}\"",
    "lint": "npm run lint:js && npm run lint:types",
    "lint:fix": "eslint . --fix",
    "lint:js": "eslint .",
    "lint:types": "npm exec --workspaces -- tsc --noEmit",
    "prepare": "husky || true",
    "start": "npm run start --workspace designer",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/eslint-plugin": "^7.23.5",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "optionalDependencies": {
    "@types/dagre": "^0.7.52",
    "@types/hapi": "^18.0.14",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.11.22",
    "@types/react": "^17.0.76",
    "@types/react-dom": "^17.0.25"
  },
  "engines": {
    "node": "^20.9.0",
    "npm": "^10.1.0"
  }
}
