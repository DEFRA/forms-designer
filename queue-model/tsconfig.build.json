{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"]
    },
    "rootDir": "./src"
  },
  "exclude": ["**/*.test.*"],
  "include": [
    "./src/**/*.cjs",
    "./src/**/*.js",
    "./src/**/*.mjs",
    "./src/**/*.ts"
  ]
}
