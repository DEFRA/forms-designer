{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "./dist/module",
    "paths": {
      "~/src/*": ["./src/*"]
    },
    "rootDir": "./src"
  },
  "exclude": ["./src/**/*.test.*"],
  "include": [
    "./src/**/*.cjs",
    "./src/**/*.js",
    "./src/**/*.mjs",
    "./src/**/*.ts"
  ]
}
