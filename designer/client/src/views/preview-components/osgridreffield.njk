{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

<div class="govuk-form-group {{ model.previewClasses }} {{ model.userClasses }}">
  <h1 class="govuk-label-wrapper">
    <label class="govuk-label govuk-label--l {{ model.label.classes }}" for="osgridref">
      {{ model.label.text }}
    </label>
  </h1>

  <div class="govuk-hint {{ model.hint.classes }}">{{ model.hint.text }}</div>

  {{ govukInput({
    id: "osgridref",
    name: "osgridref",
    classes: "govuk-input--width-20 " + (model.inputClasses if model.inputClasses),
    attributes: {
      maxlength: "12"
    }
  }) }}

  {% if model.instructionText %}
    {{ govukDetails({
      summaryText: "How to find location details",
      html: model.instructionText | markdown | safe,
      classes: model.details.classes if model.details.classes
    }) }}
  {% endif %}
</div>
