{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}

<div class="{{ model.previewClasses }}">

  <!-- heading -->
  <div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
      <label class="govuk-label {{ model.label.classes}}" for="DeclarationField">
        {{ model.label.text }}
      </label>
    </h1>
  </div>

  <p>{{ model.declarationText | markdown | safe }}</p>

  {{ govukCheckboxes({
    name: "agree",
    items: [
      {
        value: "checkDeclaration",
        text: "I understand and agree"
      }
    ]
  }) }}

</div>
