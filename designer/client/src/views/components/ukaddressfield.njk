{% from "govuk/components/input/macro.njk" import govukInput %}

<fieldset class="govuk-fieldset">
  <legend class="govuk-fieldset__legend govuk-fieldset__legend--m" id="question-label-output">
    {{ model.label.text }}
  </legend>
  <div class="govuk-hint" id="hint-text-output">{{ model.hint.text }}</div>
  {{ govukInput({
    label: {
      text: "Address line 1"
    },
    id: "addressLine1",
    name: "addressLine1"
  }) }}

  {{ govukInput({
    label: {
      text: "Address line 2 (optional)"
    },
    id: "addressLine2",
    name: "addressLine2"
  }) }}

  {{ govukInput({
    label: {
      text: "Town or city"
    },
    id: "town",
    name: "town"
  }) }}

  {{ govukInput({
    label: {
      text: "Postcode"
    },
    id: "postcode",
    name: "postcode"
  }) }}

</fieldset>
