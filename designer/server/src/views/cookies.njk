{% extends "layouts/page.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = "Cookies" %}

{% block content %}
  {% call appPageBody({
    heading: {
      text: pageTitle
    }
  }) %}
    <p class="govuk-body">
      Cookies are small files saved on your phone, tablet or computer when you visit a website.
    </p>

    <p class="govuk-body">
      We use cookies to make this site work and collect information about how you use our services.
    </p>

    <p class="govuk-body">
      Find out
      <a
        rel="external"
        href="https://ico.org.uk/for-the-public/online/cookies"
        class="govuk-link">
        how to manage cookies
      </a>
      from the Information Commissioner's Office.
    </p>

    <h2 class="govuk-heading-l govuk-!-margin-top-6">
      Essential cookies (strictly necessary)
    </h2>

    <p class="govuk-body">
      Essential cookies keep your information secure while you use this service.
      We do not need to ask permission to use them.
    </p>

    {{ govukTable({
      firstCellIsHeader: true,
      caption: "Essential cookies we use",
      head: [
        { text: "Name" },
        { text: "Purpose"},
        { text: "Expires"}
      ],
      rows: [
        [
          { text: "User_sessions" },
          { text: "Saves your information so you can return later" },
          { text: "24 hours" }
        ],
        [
          { text: "Forms_sessions" },
          { text: "Remembers your answers to questions in a form" },
          { text: "When you close your browser" }
        ]
      ]
    }) }}
  {% endcall %}
{% endblock %}
