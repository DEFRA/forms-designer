{% extends 'layouts/page.njk' %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}
  {{ appHeading({
    text: pageTitle,
    classes: "govuk-heading-l"
  }) }}

  {% call appPageBody() %}
    <p class="govuk-body-l">Sign in to {{ config.serviceName }} to access and create forms.</p>

    {{ govukButton({
      text: "Continue",
      href: "/auth/sign-in"
    })}}
  {% endcall %}
{% endblock %}
