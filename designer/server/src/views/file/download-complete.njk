{% extends 'layouts/page.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block head %}
  {{ super()}}
  <meta http-equiv="refresh" content="0; url={{downloadUrl}}">
{% endblock %}

{% block content %}
  {% call appPageBody({
    heading: pageHeading
  }) %}
    <p class="govuk-body-l">
      Your file is downloading
    </p>

    <p class="govuk-body-l">
      Once download is complete, your file will be saved in the 'Downloads' folder on your computer. If nothing happens, select 'Download file'.
    </p>

    {{ govukButton({
      text: buttonText,
      href: downloadUrl
    }) }}

  {% endcall %}
{% endblock %}
