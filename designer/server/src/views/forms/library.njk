{% extends 'layouts/page.njk' %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/pagination/macro.njk" import govukPagination %}
{% from "form-status/macro.njk" import appFormStatus %}

{% block content %}
  {% call appPageBody({
    heading: pageHeading,
    classes: "govuk-grid-column-two-thirds-from-desktop"
  }) %}
    {% if formItems | length %}
      <h2 class="govuk-heading-m">
        {{ (pagination.totalItems if pagination else formItems | length) + (" form" if (pagination.totalItems if pagination else formItems | length) == 1 else " forms" ) }}
      </h2>

      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    {% endif %}

    {{ govukButton({
      text: "Create new form",
      href: "/create"
    }) }}

    {% set formRowsMobile = [] %}
    {% set formRowsDesktop = [] %}

    {% for form in formItems %}
      {% set formName %}
        <a href="/library/{{ form.slug | urlencode }}" class="govuk-link govuk-link--no-visited-state">
          {{ form.title }}
        </a>
      {% endset %}

      {% set formUpdated %}
        <span class="app-display-until-desktop">Updated </span>{{ form.updatedAt | formatDate }}<br>
        by {{ form.updatedBy.displayName }}
      {% endset %}

      {% set formNameUpdated %}
        {{ formName | safe }}
        <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-1">
          {{ formUpdated | safe }}
        </p>
      {% endset %}

      {% set formStatus %}
        {{ appFormStatus({
          metadata: form
        }) }}
      {% endset %}

      {% set formRowsMobile = (formRowsMobile.push([
        {
          html: formNameUpdated
        },
        {
          html: formStatus
        }
      ]), formRowsMobile) %}

      {% set formRowsDesktop = (formRowsDesktop.push([
        {
          html: formName
        },
        {
          html: formUpdated
        },
        {
          html: formStatus
        }
      ]), formRowsDesktop) %}
    {% endfor %}

    {% if formRowsMobile | length %}
      {{ govukTable({
        classes: "app-display-until-desktop" if formRowsDesktop | length,
        head: [
          {
            text: "Name",
            classes: "govuk-!-width-three-quarters"
          },
          {
            text: "Status"
          }
        ],
        rows: formRowsMobile
      }) }}
    {% endif %}

    {% if formRowsDesktop | length %}
      {{ govukTable({
        classes: "app-display-from-desktop" if formRowsMobile | length,
        head: [
          {
            text: "Name",
            classes: "govuk-!-width-one-half"
          },
          {
            text: "Last updated"
          },
          {
            text: "Status",
            classes: "govuk-!-width-one-quarter"
          }
        ],
        rows: formRowsDesktop
      }) }}
    {% endif %}

    {% if pagination and pagination.totalPages > 1 %}
      {% set previous = null %}
      {% if pagination.page > 1 %}
        {% set previous = {
          href: "?page=" ~ (pagination.page - 1) ~ "&perPage=" ~ pagination.perPage,
        labelText: "Previous page",
        text: "Previous"
      } %}
    {% endif %}

    {% set next = null %}
    {% if pagination.page < pagination.totalPages %}
      {% set next = {
        href: "?page=" ~ (pagination.page + 1) ~ "&perPage=" ~ pagination.perPage,
        labelText: "Next page",
        text: "Next"
      } %}
    {% endif %}

    {{ govukPagination({
      previous: previous,
      next: next,
      items: pagination.pages
    }) }}
    {% endif %}
  {% endcall %}
{% endblock %}
