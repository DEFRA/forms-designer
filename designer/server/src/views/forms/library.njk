{% extends 'layouts/page.njk' %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "form-status/macro.njk" import appFormStatus %}

{% block content %}
  {{ appHeading({
    text: pageTitle,
    classes: "govuk-heading-l"
  }) }}

  {% call appPageBody() %}
    {% if formItems | length %}
      <h2 class="govuk-heading-m">
        {{ formItems | length + (" form" if formItems | length == 1 else " forms" ) }}
      </h2>

      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    {% endif %}

    {{ govukButton({
      text: "Create new form",
      href: "/create"
    }) }}

    {% set formRowsMobile = [] %}
    {% set formRowsDesktop = [] %}

    {% for form in formItems %}
      {% set formName %}
        <a href="/library/{{ form.slug | urlencode }}/editor" class="govuk-link govuk-link--no-visited-state">
          {{ form.title }}
        </a>
      {% endset %}

      {% set formUpdated %}
        <span class="app-display-until-desktop">Updated </span>{{ (form.draft.updatedAt if form.draft.updatedAt else "2024-04-09") | formatDate }}<br>
        by {{ form.draft.updatedBy.displayName | default("Enrique Chase", true) }}
      {% endset %}

      {% set formNameUpdated %}
        {{ formName | safe }}
        <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-1">
          {{ formUpdated | safe }}
        </p>
      {% endset %}

      {% set formStatus %}
        {{ appFormStatus({
          metadata: form
        }) }}
      {% endset %}

      {% set formRowsMobile = (formRowsMobile.push([
        {
          html: formNameUpdated
        },
        {
          html: formStatus
        }
      ]), formRowsMobile) %}

      {% set formRowsDesktop = (formRowsDesktop.push([
        {
          html: formName
        },
        {
          html: formUpdated
        },
        {
          html: formStatus
        }
      ]), formRowsDesktop) %}
    {% endfor %}

    {% if formRowsMobile | length %}
      {{ govukTable({
        classes: "app-display-until-desktop" if formRowsDesktop | length,
        head: [
          {
            text: "Name",
            classes: "govuk-!-width-three-quarters"
          },
          {
            text: "Status"
          }
        ],
        rows: formRowsMobile
      }) }}
    {% endif %}

    {% if formRowsDesktop | length %}
      {{ govukTable({
        classes: "app-display-from-desktop" if formRowsMobile | length,
        head: [
          {
            text: "Name",
            classes: "govuk-!-width-one-half"
          },
          {
            text: "Last updated"
          },
          {
            text: "Status"
          }
        ],
        rows: formRowsDesktop
      }) }}
    {% endif %}
  {% endcall %}
{% endblock %}
