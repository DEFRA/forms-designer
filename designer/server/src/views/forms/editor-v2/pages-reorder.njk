{% extends "layouts/page.njk" %}

{% from "page-body/macro.njk" import appPageBody %}
{% from "pages-reorder-panel/macro.njk" import appPagesReorderPanel %}

{% set mainClasses = "govuk-main-wrapper--masthead" %}

{% block content %}
{% call appPageBody({
  heading: pageHeading,
  description: pageDescription,
  caption: pageCaption,
  actions: pageActions,
  classes: "govuk-grid-column-full govuk-grid-column-one-half-from-desktop",
  backLink: backLink
}) %}

  <form class="form">
      {% for page in pages %}
        <div class="govuk-grid-row page-row">
          <div class="govuk-grid-column-full">
          {{ appPagesReorderPanel({
            formName: name,
            pageNum: loop.index,
            pageId: page.id,
            pageTitle: page.title,
            actions: page.actions,
            isReorderPages: isReorderPages
            }) }}
          </div>
        </div>
      {% endfor %}
  </form>
{% endcall %}
{% endblock %}

{% block mainEnd %}
  {{ super() }}
{% endblock %}
