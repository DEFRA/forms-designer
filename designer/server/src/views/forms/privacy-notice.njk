{% extends "layouts/page.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block beforeContent %}
  <div class="govuk-width-container app-width-container--wide">
    {{ govukBackLink(backLink) }}
  </div>
{% endblock %}

{% block content %}
  <form method="post" novalidate>
    {% call appPageBody({
      heading: {
        text: pageTitle,
        caption: form.title,
        size: "large"
      },
      errorList: errorList
    }) %}
      <p class="govuk-body-l">
        To comply with the UK General Data Protection Regulation (UK GDPR),
        you must provide privacy information for the people who will enter their data into your form.
      </p>

      {{ govukInput({
        label: field.label,
        hint: field.hint,
        id: field.id,
        name: field.name,
        type: field.type,
        value: field.value,
        errorMessage: {
          text: formErrors[field.name].text
        } if formErrors[field.name],
        autocapitalize: field.autocapitalize,
        autocomplete: field.autocomplete,
        spellcheck: field.spellcheck
      }) }}

      <div class="govuk-button-group">
        {{ govukButton({
          text: buttonText
        }) }}

        {{ govukButton({
          text: "Cancel",
          href: backLink.href,
          classes: "govuk-button--secondary"
        }) }}
      </div>
    </form>
  {% endcall %}
{% endblock %}
