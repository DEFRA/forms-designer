{% extends "layouts/page.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <form method="post" novalidate>
    {% call appPageBody({
      heading: pageHeading
    }) %}

    <p class="govuk-body-l">{{ bodyText | safe }}</p>

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Make form live"
      }) }}

      {{ govukButton({
        text: "Cancel",
        href: cancelLink,
        classes: "govuk-button--secondary"
      }) }}
    </div>
    </form>
  {% endcall %}
{% endblock %}
