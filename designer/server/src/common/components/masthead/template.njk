{% from "govuk/macros/attributes.njk" import govukAttributes %}

<div class="app-masthead{%- if params.classes %} {{ params.classes }}{% endif -%}"
  {{- govukAttributes(params.attributes) }}>
  <div class="govuk-width-container app-width-container--wide">
    <div class="govuk-grid-row">
      {% if params.backLink %}
      <a href="{{ params.backLink.href }}" class="govuk-back-link govuk-back-link--inverse govuk-!-margin-bottom-0">{{ params.backLink.text }}</a>
      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible" style="border-bottom:1px solid white; margin-bottom: 0;">
      {% endif %}
      <div class="govuk-grid-column-two-thirds-from-desktop">
      {% if params.heading %}
        <h1 class="app-masthead__heading govuk-heading-xl {%- if params.heading.classes %} {{ params.heading.classes }}{% endif %}">
          {% if params.caption %}
          <span class="app-masthead__caption govuk-caption-l {%- if params.caption.classes %} {{ params.caption.classes }}{% endif %}">{{ params.caption.html | safe if params.caption.html else params.caption.text }}</span>
          {% endif %}
          {{ params.heading.html | safe if params.heading.html else params.heading.text }}
        </h1>
      {% endif %}
      {% if params.description %}
        <p class="app-masthead__description govuk-body-l {%- if params.description.classes %} {{ params.description.classes }}{% endif %}">
          {{ params.description.html | safe if params.description.html else params.description.text }}
        </p>
      {% endif %}
        {{ caller() if caller else (params.html | safe if params.html else params.text) }}
      </div>
    </div>
  </div>
</div>
