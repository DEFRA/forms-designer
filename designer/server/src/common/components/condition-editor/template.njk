{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "select-with-opt-group/macro.njk" import appSelectWithOptGroup %}

{% set component = params.component %}
{% set operator = params.operator %}
{% set value = params.value %}
{% set displayName = params.displayNameField %}

{% set operatorHtml %}
  {% if operator %}
    {{ govukSelect(operator) }}
  {% endif %}
{% endset %}

{% set valueHtml %}
  {% if value %}
    {{ govukSelect() }}
  {% endif %}
{% endset %}

<form class="form" method="post">
  {% call govukFieldset({
    legend: {
      text: params.legendText,
      classes: "govuk-fieldset__legend--s",
      isPageHeading: false
    }
  }) %}
    {{ appSelectWithOptGroup(params) }}
    {{ operatorHtml | safe }}
    {{ valueHtml | safe }}
    {{ govukInput(displayName) }}
  {% endcall %}

  {{ govukButton({
    text: 'Save and continue'
  }) }}
</form>
