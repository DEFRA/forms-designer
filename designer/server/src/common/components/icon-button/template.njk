{% if not params.type or params.type === 'link' %}
<a href="{{ params.href }}" role="button" target="_blank" {% if params.id %} id="{{ params.id }}" {% endif %} draggable="false" class="govuk-button  {{ extraClasses }}" data-module="govuk-button" data-govuk-button-init="">
  <span class="icon-wrapper">
    {{ iconHtml | safe }}
  </span>
  <span class="button-text">{{ params.label }}</span>
</a>
{% else %}
<button class="govuk-button {{ extraClasses }}" name="{{ params.name }}" type="submit" value="{{ params.value }}" formaction="{{ params.formaction }}">
  <span class="icon-wrapper">
    {{ iconHtml | safe }}
  </span>
{{ params.label }}</button>
{% endif %}
