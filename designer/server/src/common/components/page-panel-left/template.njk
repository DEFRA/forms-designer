{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set cardClass = "page-panel-left-standard" %}
{% if params.isEndPage %}
{% set cardClass = "page-panel-left-end" %}
{% endif %}

{% set questionRows = [] %}
{% for question in params.rows %}
  {% set mappedQuestion = {
    key: {
      text: "Question " + loop.index
    },
    value: {
      text: question.title
    }
  } %}
  {% set questionRows = (questionRows.push(mappedQuestion), questionRows) %}
{% endfor %}

{{ govukSummaryList({
  card: {
    title: {
      text: "Page " + params.pageNum + ": " + params.pageTitle
    },
    actions: {
      items: [
        {
          href: "#",
          text: "Edit",
          visuallyHiddenText: " page " + params.pageNum
        },
        {
          href: "#",
          text: "Preview",
          visuallyHiddenText: " page " + params.pageNum
        }
      ]
    },
    classes: cardClass
  },
  rows: questionRows
}) }}

