{% extends "govuk/template.njk" %}

{% from "page-body/macro.njk" import appPageBody %}
{% from "breadcrumbs/macro.njk" import appBreadcrumbs %}
{% from "heading/macro.njk" import appHeading %}

{% block head %}
  <link href="{{ getAssetPath("application.css") }}" rel="stylesheet">
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "/forms-designer",
    serviceName: serviceName,
    serviceUrl: "/forms-designer",
    useTudorCrown: true
  }) }}
  {% if isAuthenticated %}
  {% include "partials/navigation.njk" %}
  {% endif %}
{% endblock %}

{% block pageTitle %}{{ pageTitle }} - {{ serviceName }}{% endblock %}

{% block beforeContent %}
  {% if breadcrumbs.length > 1 %}
    {{ appBreadcrumbs({
      items: breadcrumbs
    }) }}
  {% endif %}
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: appPathPrefix + "/help/accessibility-statement",
          text: "Accessibility statement"
        },
        {
          href: appPathPrefix + "/help/cookies",
          text: "Cookies"
        },
        {
          href: "https://www.gov.uk/help/privacy-notice",
          text: "Privacy"
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ getAssetPath("application.js") }}"></script>
{% endblock %}
