{% extends 'layouts/page.njk' %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  {% if isAuthenticated %}
    {{ appHeading({
      text: "Welcome, " + authedUser.displayName + "."
    }) }}

    {% call appPageBody() %}
      {{ govukButton({
        text: "Sign out",
        href: appPathPrefix + "/logout"
      })}}
    {% endcall %}
  {% else %}
    {{ appHeading({
      text: "Sign in to Defra Forms"
    }) }}

    {% call appPageBody() %}
      {{ govukButton({
        text: "Sign in",
        href: appPathPrefix + "/login",
        isStartButton: true
      }) }}
    {% endcall %}
  {% endif %}
{% endblock %}