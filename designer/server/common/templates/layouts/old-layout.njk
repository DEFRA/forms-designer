{% from "govuk/components/header/macro.njk" import govukHeader -%}
{% from "govuk/components/footer/macro.njk" import govukFooter -%}

<!DOCTYPE html>
<html lang="{{ htmlLang | default('en') }}" class="{{ htmlClasses }}">
  <head>
    <base href="/">
    <meta charset="utf-8" />
    <title>
      {% block pageTitle %}
        GOV.UK Site - Designer
      {% endblock %}
    </title>
	<script src="https://unpkg.com/react@16/umd/react.development.js" defer></script>
	<script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" defer></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="{{ themeColor | default('#0b0c0c') }}" /> {# Hardcoded value of $govuk-black #}

    <link rel="shortcut icon" href="{{ legacyAssetPath }}/images/favicon.ico" type="image/x-icon" />
    <link rel="mask-icon" href="{{ legacyAssetPath }}/images/govuk-mask-icon.svg" color="{{ themeColor | default('#0b0c0c') }}"> {# Hardcoded value of $govuk-black #}
    <link rel="apple-touch-icon" sizes="180x180" href="{{ legacyAssetPath }}/images/govuk-apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="{{ legacyAssetPath }}/images/govuk-apple-touch-icon-167x167.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ legacyAssetPath }}/images/govuk-apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" href="{{ legacyAssetPath }}/images/govuk-apple-touch-icon.png">

    {# The default og:image is added below head so that scrapers see any custom metatags first, and this is just a fallback #}
    <meta property="og:image" content="{{ legacyAssetPath }}/images/govuk-opengraph-image.png">

    <script defer src="{{ legacyAssetPath }}/main.js"></script><link href="{{ legacyAssetPath }}/css/main.css" rel="stylesheet">

  </head>
  <body>
    <script>
      window.previewUrl = '{{previewUrl}}'
      {% if (id) %}
          window.id = '{{ id }}'
          window.playgroundMode = true
      {% endif %}
      {% if (newConfig) %}
          window.newConfig = {{ newConfig }}
      {% endif %}
    </script>

    {% block header %}
      {% include "../partials/old/home-office-header.html" %}
    {% endblock %}

    {% block content %}
      <h1 class="govuk-heading-xl">Default page template</h1>
    {% endblock %}

    {% block footer %}
      {% include "../partials/old/home-office-footer.html" %}
    {% endblock %}

  </body>
</html>
